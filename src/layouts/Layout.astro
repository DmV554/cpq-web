---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import './src/styles/global.css'
import {ClientRouter} from 'astro:transitions';

export interface Props {
  title: string;
  description?: string;
  bodyClass?: string; // Para clases específicas por página si es necesario
}

const {
  title,
  description = "Consultora Punto de Quiebre - Evaluación experta para decisiones que transforman.",
  bodyClass
} = Astro.props;

const siteName = "Consultora Punto de Quiebre";
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/assets/favicon.png" /> {/* Coloca tu favicon en public/assets/ */}
  <title>{title} | {siteName}</title>
  <meta name="description" content={description} />
  <ClientRouter />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">

  {/* Canonical URL (opcional pero bueno para SEO) */}
  <link rel="canonical" href={Astro.url.href} />
</head>

<body class:list={['flex flex-col min-h-screen antialiased', bodyClass]}> {/* Clases base de Tailwind ya aplicadas vía @layer base en global.css */}
  <Header siteName={siteName} currentPath={currentPath} />
  <main id="main-content" class="flex-grow">
    <slot /> {/* Aquí se inyectará el contenido de cada página */}
  </main>
  <Footer />
</body>

</html>